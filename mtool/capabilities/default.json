{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default-plugins",
  "description": "enables the default permissions",
  "windows": ["mtool", "mtool-*"],
  "permissions": [
    "mtool-interactive:default",
    "mtool-dict:default",
    "mtool-translate:default",
    "mtool-pdf:default",
    "path:default",
    "event:default",
    "window:default",
    "window:allow-set-size",
    "window:allow-set-position",
    "webview:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default"
  ]
}
